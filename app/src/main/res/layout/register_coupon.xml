<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logincolor">

    <FrameLayout
        android:id="@+id/register_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/register_success1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/register_success2" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@mipmap/register_success3" />


        <ImageButton
            android:id="@+id/register_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="57dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/register_success5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="恭喜你!\n您已成为一鲜用户\n优惠卷已发至您的账户"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/register_dialog_look"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:background="@drawable/all_add_car_select"
            android:textColor="@color/white"
            android:text="立即查看"></Button>
    </FrameLayout>

</FrameLayout>
