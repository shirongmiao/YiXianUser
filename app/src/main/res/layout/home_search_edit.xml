<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
      style="@style/FragmentTop">

        <ImageView
            android:id="@+id/imageView1"
            style="@style/Left" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:imeOptions="actionSearch"
            android:paddingLeft="10dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:drawableLeft="@mipmap/all_search_black"
            android:background="@drawable/round_search_edit"
            android:hint=" 搜索的内容"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/search_sure"
            android:layout_width="@dimen/top_width"
            android:layout_height="@dimen/top_width"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="热门搜索"
        android:textSize="15sp" />

    <GridView
        android:id="@+id/search_hot"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:scrollbars="none"
        android:horizontalSpacing="9dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="9dp"></GridView>

    <TextView
        android:id="@+id/history_in"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="历史搜索"
        android:textSize="15sp"
        android:visibility="invisible" />

    <GridView
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="9dp"
        android:scrollbars="none"
        android:layout_marginRight="9dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="9dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="9dp"></GridView>

    <TextView
        android:id="@+id/search_clean"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="清除历史搜索"
        android:textSize="15sp"
        android:visibility="invisible" />
</LinearLayout>