<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pinglun_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/testa" />

    <TextView
        android:id="@+id/pinglun_item_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pinglun_item_image"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/pinglun_item_image"
        android:ellipsize="end"
        android:lines="1"
        android:text="越南红心火龙果，8元两个"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/pinglun_item_pinglunstr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/pinglun_item_image"
        android:layout_below="@id/pinglun_item_describe"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/pinglun_item_image"
        android:background="@drawable/edittext"
        android:gravity="top"
        android:hint="东西很不错，购买方便，好评"
        android:minLines="3"
        android:padding="5dp"
        android:textSize="12dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/pinglun_item_image"
        android:background="@color/line_grey"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="描述相符" />

        <RatingBar
            android:id="@+id/pinglun_item_rating"
            android:progressDrawable="@drawable/ratingbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
           android:layout_marginLeft="100dp"
            android:isIndicator="false"
            android:rating="5"
            android:stepSize="1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/linegray"></View>
</RelativeLayout>
