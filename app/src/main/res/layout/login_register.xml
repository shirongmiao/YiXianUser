<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        style="@style/FragmentTop"
        android:layout_height="@dimen/top_width"
        android:background="@null"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/register_return"
            style="@style/Left" />

        <TextView
            style="@style/Center"
            android:text="注册"
            android:textColor="@color/white" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">


            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="7dp"
                android:background="@null"
                android:drawableBottom="@drawable/line_white"
                android:ems="7"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/edit_white"
                android:textSize="13dp">

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableBottom="@drawable/line_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_test"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableBottom="@drawable/line_white"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_white"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/register_send"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:alpha="0.9"
                    android:background="@drawable/round_write"
                    android:text="获取验证码" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableBottom="@drawable/line_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/register_password"
                    style="@style/EditText"
                    android:drawableBottom="@drawable/line_white"
                    android:ems="10"
                    android:hint="6-32位字母或数字"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColorHint="@color/edit_white"
                    android:textSize="13dp">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbos_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="我已阅读并同意"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/yixian_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="《一鲜用户使用协议》"
                    android:textColor="@color/green" />

            </LinearLayout>


            <Button
                android:id="@+id/register_but"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_hollow"
                android:src="@mipmap/all_right"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>