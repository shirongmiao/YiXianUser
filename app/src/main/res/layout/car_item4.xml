<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="2dp"
    app:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/second_image"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="我是商品名称品名称"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/second_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:singleLine="true"
                android:text="我是商品规格"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格/"
                android:textColor="@color/actionsheet_red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/second_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员价"
                android:textColor="@color/actionsheet_red"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/second_into"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:background="@drawable/all_add_car_select"
            android:text="立即购买"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/second_PromotionName"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="买一\n送一"
        android:textColor="@color/white"
        android:textSize="12sp" />

</android.support.v7.widget.CardView>