<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forget_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/titlebar"
        style="@style/FragmentTop"
        android:layout_height="@dimen/top_width"
        android:paddingTop="0dp"
        android:background="@null">

        <ImageView
            android:id="@+id/imageView1"
            style="@style/Left" />

        <TextView
            android:id="@+id/tubiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="密码修改"
            android:textColor="@color/white" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <LinearLayout
            android:id="@+id/loginPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:drawableBottom="@drawable/line_white"
                android:ems="10"
                android:hint="请输入您的手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/edit_white"
                android:textSize="14sp">

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/validation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableBottom="@drawable/line_white"
                    android:hint="验证码"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edit_white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/text_ma"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@drawable/round_hollow"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="获取验证码"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/ok_but"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_hollow"
                android:textColor="@color/white"
                android:text="确定" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>