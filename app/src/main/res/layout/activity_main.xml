<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.lfy.fresh.MainActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_width"></FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_width"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_home"
            style="@style/RadioButton"
            android:checked="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_home_tab"
            android:text="@string/bottom_home"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/main_classify"
            style="@style/RadioButton"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_classify_tab"
            android:text="@string/bottom_classify"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/main_car"
            style="@style/RadioButton"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_car_tab"
            android:text="@string/bottom_car"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/main_order"
            style="@style/RadioButton"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_order_tab"
            android:text="@string/bottom_order"
            android:textSize="10dp" />

        <RadioButton
            android:id="@+id/main_mine"
            style="@style/RadioButton"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_mine_tab"
            android:text="@string/bottom_mine"
            android:textSize="10dp" />

    </RadioGroup>


    <View
        android:id="@+id/home_car_red"
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></View>

</RelativeLayout>
