<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <View
            android:id="@+id/zhuangtai_top"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/green"></View>

        <ImageView
            android:id="@+id/zhuangtai_round"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:src="@drawable/round_big" />

        <View
            android:id="@+id/zhuangtai_bottom"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/green"></View>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zhangtai_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已提交"
            android:textColor="@color/ziti"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/zhangtai_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="订单已提交"
            android:textSize="@dimen/zhuangtai_item_bucong" />
    </LinearLayout>

    <TextView
        android:id="@+id/zhuantai_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical" />
</FrameLayout>