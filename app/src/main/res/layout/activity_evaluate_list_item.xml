<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.example.lfy.myapplication.Util.CircleImageView
        android:id="@+id/evaluate_item_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/mine_default_photo"></com.example.lfy.myapplication.Util.CircleImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/evaluate_item_CustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/evaluate_item_creatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/evaluate_item_CustomerName"
                android:layout_alignParentRight="true"
                android:textSize="11dp" />
        </RelativeLayout>

        <RatingBar
            android:id="@+id/evaluate_item_star"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:isIndicator="true"
            android:minHeight="0dp"
            android:progressDrawable="@drawable/ratingbar_back"
            android:stepSize="1" />

        <TextView
            android:id="@+id/evaluate_item_evaluateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:textSize="13dp"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
